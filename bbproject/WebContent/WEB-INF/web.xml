<?xml version="1.0" encoding="ISO-8859-1"?>

<!DOCTYPE web-app 
    PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN" 
    "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>


    <!-- General description of your web application -->

    <display-name>Brndbot application</display-name>
    <description>
      This is version zero or so of an application to perform
      a wild and wonderful task, based on servlets and
      JSP pages.  
    </description>


    <!-- Context initialization parameters that define shared
         String constants used within your application, which
         can be customized by the system administrator who is
         installing your application.  The values actually
         assigned to these parameters can be retrieved in a
         servlet or JSP page by calling:

             String value =
               getServletContext().getInitParameter("name");

         where "name" matches the <param-name> element of
         one of these initialization parameters.

         You can define any number of context initialization
         parameters, including zero.
    -->

    <context-param>
      <param-name>webmaster</param-name>
      <param-value>webmaster@brndbot.com</param-value>
      <description>
        The EMAIL address of the administrator to whom questions
        and comments about this application should be addressed.
      </description>
    </context-param>


    <!-- Servlet definitions for the servlets that make up
         your web application, including initialization
         parameters.  With Tomcat, you can also send requests
         to servlets not listed here with a request like this:

           http://localhost:8080/{context-path}/servlet/{classname}

         but this usage is not guaranteed to be portable.  It also
         makes relative references to images and other resources
         required by your servlet more complicated, so defining
         all of your servlets (and defining a mapping to them with
         a servlet-mapping element) is recommended.

         Servlet initialization parameters can be retrieved in a
         servlet or JSP page by calling:

             String value =
               getServletConfig().getInitParameter("name");

         where "name" matches the <param-name> element of
         one of these initialization parameters.

         You can define any number of servlets, including zero.
    -->

    <servlet>
      <servlet-name>DashboardServlet</servlet-name>
      <description>
        The user dashboard
      </description>
      <servlet-class>com.brndbot.servlets.DashboardServlet</servlet-class>
      <!-- Load this servlet at server startup time -->
      <load-on-startup>5</load-on-startup>
    </servlet>
    
    <servlet>
      <servlet-name>LoginServlet</servlet-name>
      <description>
        Log the user in
      </description>
      <servlet-class>com.brndbot.servlets.LoginServlet</servlet-class>
      <!-- Load this servlet at server startup time -->
      <load-on-startup>4</load-on-startup>
    </servlet>
    
    <servlet>
      <servlet-name>SetSessionServlet</servlet-name>
      <description>
        Set session
      </description>
      <servlet-class>com.brndbot.servlets.SetSessionServlet</servlet-class>
    </servlet>
    
    <servlet>
      <servlet-name>EmailExistServlet</servlet-name>
      <description>
        Email checker?
      </description>
      <servlet-class>com.brndbot.servlets.EmailExistServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>SaveImageServlet</servlet-name>
      <description>
        Handles image uploads
      </description>
      <servlet-class>com.brndbot.servlets.SaveImageServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>SaveHTMLAsImageServlet</servlet-name>
      <description>
        Save HTML as image
      </description>
      <servlet-class>com.brndbot.servlets.SaveHTMLAsImageServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>SavePaletteServlet</servlet-name>
      <description>
        Save palette
      </description>
      <servlet-class>com.brndbot.servlets.SavePaletteServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>SaveUserServlet</servlet-name>
      <description>
        Save user
      </description>
      <servlet-class>com.brndbot.servlets.SaveUserServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>RemoveLogoServlet</servlet-name>
      <description>
        Remove logo
      </description>
      <servlet-class>com.brndbot.servlets.RemoveLogoServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>GetFacilitiesServlet</servlet-name>
      <description>
        Get facilities (whatever that is)
      </description>
      <servlet-class>com.brndbot.servlets.Get FacilitiesServlet</servlet-class>
    </servlet>

    <servlet>
      <servlet-name>GetImagesServlet</servlet-name>
      <description>
        Get images
      </description>
      <servlet-class>com.brndbot.servlets.GetImagesServlet</servlet-class>
    </servlet>



    <!-- Define mappings that are used by the servlet container to
         translate a particular request URI (context-relative) to a
         particular servlet.  
         
         You may define any number of servlet mappings, including zero.
         It is also legal to define more than one mapping for the same
         servlet, if you wish to.
    -->

    <servlet-mapping>
      <servlet-name>DashboardServlet</servlet-name>
      <url-pattern>/DashboardServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>LoginServlet</servlet-name>
      <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>SetSessionServlet</servlet-name>
      <url-pattern>/SetSessionServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>EmailExistServlet</servlet-name>
      <url-pattern>/EmailExistServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>SaveImageServlet</servlet-name>
      <url-pattern>/SaveImageServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>SaveHTMLAsImageServlet</servlet-name>
      <url-pattern>/SaveHTMLAsImageServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>SavePaletteServlet</servlet-name>
      <url-pattern>/SavePaletteServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>SaveUserServlet</servlet-name>
      <url-pattern>/SaveUserServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>RemoveLogoServlet</servlet-name>
      <url-pattern>/RemoveLogoServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>GetFacilitiesServlet</servlet-name>
      <url-pattern>/GetFacilitiesServlet</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
      <servlet-name>GetImagesServlet</servlet-name>
      <url-pattern>/GetImagesServlet</url-pattern>
    </servlet-mapping>


    <!-- Define the default session timeout for your application,
         in minutes.  From a servlet or JSP page, you can modify
         the timeout for a particular session dynamically by using
         HttpSession.getMaxInactiveInterval(). -->

    <session-config>
      <session-timeout>30</session-timeout>    <!-- 30 minutes -->
    </session-config>


</web-app>
